<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheLittleThingsPlayground.Views.ThreeFourPage"
             Title="3.4.0" ControlTemplate="{StaticResource MasterPage}">


    <ContentPage.Resources>
        <StyleSheet Source="../Styles/Global.css"/>
    </ContentPage.Resources>

    <StackLayout>
        <Button Text="Release Notes" Clicked="Button_Clicked"/>

        <!-- Underline and Strikethrough -->
        <Label Text="ImageButton" class="featureHeader" Margin="0,0,0,10"/>
        <BoxView BackgroundColor="Black" Margin="0,0,0,10" HeightRequest="1"/>
        <ImageButton Source="iconXamagon.png" Clicked="ImageButton_Clicked" Aspect="AspectFit" 
                     HeightRequest="50"   
                     AutomationProperties.HelpText="Xamarin Logo" />
    </StackLayout>
</ContentPage>